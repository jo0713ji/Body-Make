<div class="container mx-auto">
  <div class="flex flex-col justify-center items-center py-6">
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-bold text-center mb-6">ユーザー登録</h1>
      <%= form_with model: @user, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>
        <div class="mb-4">
          <%= f.label :name, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.text_field :name, class: 'form-input mt-1 block w-full rounded-md border-gray-300' %>
        </div>
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.email_field :email, class: 'form-input mt-1 block w-full rounded-md border-gray-300' %>
        </div>
        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.password_field :password, class: 'form-input mt-1 block w-full rounded-md border-gray-300' %>
        </div>
        <div class="mb-6">
          <%= f.label :password_confirmation, class: "block text-gray-700 font-bold mb-2" %>
          <%= f.password_field :password_confirmation, class: 'form-input mt-1 block w-full rounded-md border-gray-300' %>
        </div>
        <div class='text-center'>
          <%= f.submit '登録', class: 'bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded' %>
        </div>
        <div class='text-center mt-4'>
          <%= link_to 'ログインページへ', login_path, class: 'text-red-500 hover:text-blue-700' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
